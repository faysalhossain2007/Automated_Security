            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="Capture"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Call"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name=".SmsSender"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name=".Settings"
            android:label="@string/app_name" >
        </activity>
    </application>
    
</manifest>